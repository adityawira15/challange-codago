    <div class="body">
        <button class="btn btn-primary" id="add-data">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
        </button>
        <br>
        <div class="add-data" id="form-add-data">
            <form class="form-inline" id="form-save">
                <div class="form-group">
                    <label for="letter">Letter</label>
                    <input type="text" name="letter" class="form-control" id="letter" placeholder="A">
                </div>
                <div class="form-group">
                    <label for="frequency">Frequency</label>
                    <input type="text" name="frequency" class="form-control" id="frequency" placeholder="0.0000">
                </div>
                <button class="btn btn-default">Save</button>
            </form>
        </div>
        <div class="add-data" id="form-edit-data">
            <form class="form-inline" id="form-update">
                <input type="hidden" name="id" id="editid">
                <div class="form-group">
                    <label for="letter">Letter</label>
                    <input type="text" name="letter" class="form-control" id="editletter" placeholder="A">
                </div>
                <div class="form-group">
                    <label for="frequency">Frequency</label>
                    <input type="text" name="frequency" class="form-control" id="editfrequency" placeholder="0.0000">
                </div>
                <button class="btn btn-default">Update</button>
            </form>
        </div>
        <br>
        <h4>Search</h4>
        <hr>
        <form class="form-inline">
            <div class="form-group">
                <label for="letter">Letter</label>
                <input type="text" name="letter" class="form-control" id="letters" placeholder="A">
            </div>
            <div class="form-group">
                <label for="frequency">Frequency</label>
                <input type="text" name="frequency" class="form-control" id="frequencys" placeholder="0.0000">
            </div>
        </form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Letter</th>
                    <th scope="col">Frequency</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <script>
            $(document).ready(function () {
                getData();
                $("#add-data").click(function () {
                    $("#form-edit-data").hide();
                    $("#form-add-data").toggle();
                });

                $('table').on('click', '.update-button', function () {
                    var rowEl = $(this).closest('tr');
                    var id = rowEl.find('.id').val();
                    console.log(id)
                    var letter = $('#editletter')
                    var frequency = $('#editfrequency')
                    var _id = $('#editid')
                    $.ajax({
                        url: `api/data/${id}`,
                        contentType: 'application/json',
                        success: (response) => {
                            letter.val(response.letter)
                            frequency.val(response.frequency)
                            _id.val(response._id)
                            $('#form-edit-data').show();
                            $("#form-add-data").hide();
                        }
                    })
                });

                $('table').on('click', '.delete-button', function () {
                    var rowEl = $(this).closest('tr');
                    var id = rowEl.find('.id').val();
                    $.confirm({
                        title: 'Delete!',
                        content: 'Are you sure to delete ?',
                        buttons: {
                            confirm:{
                                text: 'Yes',
                                btnClass: 'btn-blue',
                                action: function () {
                                    $.ajax({
                                        url: `api/data/${id}`,
                                        method: 'DELETE',
                                        contentType: 'application/json',
                                        success: function (response) {
                                            getData();
                                        }
                                    })
                                    $.alert('Deleted!');
                                }
                            }, 
                            cancel: {
                                text: 'No',
                                action: function () {
                                    $.alert('Canceled!');
                                },
                            }
                        }
                    });
                })

                // CREATE/POST
                $('#form-save').on('submit', function (event) {
                    event.preventDefault();

                    var letter = $('#letter');
                    var frequency = $('#frequency');

                    $.ajax({
                        url: '/api/data',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ letter: letter.val(), frequency: frequency.val() }),
                        success: function (response) {
                            console.log(response);
                            letter.val('');
                            frequency.val('');
                            $("#form-add-data").hide();
                            getData();
                        }
                    });
                });

                $('#form-update').on('submit', (event) => {
                    event.preventDefault();

                    var letter = $('#editletter');
                    var frequency = $('#editfrequency');
                    var id = $('#editid');

                    $.ajax({
                        url: `/api/data/${id.val()}`,
                        method: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify({ letter: letter.val(), frequency: frequency.val() }),
                        success: (response) => {
                            console.log(response)
                            letter.val('');
                            frequency.val('');
                            id.val('');
                            $('#form-edit-data').hide();
                            getData();
                        }
                    })


                })

                // Search Letter
                $('#letters').keyup(() => {
                    let letter = $('#letters')
                    let frequency = $('#frequencys')
                    if (letter.val() != '' && letter.val() != null) {
                        $.ajax({
                            url: 'api/data/search',
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({ letter: letter.val(), frequency: frequency.val() }),
                            success: (response) => {
                                createTable(response)
                            }
                        })
                    } else {
                        getData();
                    }
                })

                // Seacrh Frequency
                $('#frequencys').keyup(() => {
                    let letter = $('#letters')
                    let frequency = $('#frequencys')
                    console.log(frequency.val())
                    if (frequency.val() != '' && frequency.val() != null) {
                        $.ajax({
                            url: 'api/data/search',
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({ letter: letter.val(), frequency: frequency.val() }),
                            success: (response) => {
                                createTable(response)
                            }
                        })
                    } else {
                        getData()
                    }
                })

                // UPDATE/PUT
                // $('.update-button').click(() => {
                //     $(this).hide();
                //     console.log('update')
                //     // $('.form-update').show();
                // })
            });

            function getData() {
                $.ajax({
                    url: 'api/data',
                    contentType: 'application/json',
                    success: (response) => {
                        createTable(response)
                    }
                })
            }


            function createTable(response) {
                var tbodyEl = $('tbody');

                tbodyEl.html('');
                let no = 0;

                response.forEach(function (data) {
                    no++;
                    tbodyEl.append('\
                        <tr>\
                            <th scope="row">\
                                <input type="hidden" value="'+ data._id + '" class="id">'
                        + no +
                        '</th>\
                            <td>'
                        + data.letter +
                        '</td>\
                            <td>'
                        + data.frequency +
                        '</td>\
                            <td>\
                                <button class="btn btn-success update-button">\
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update\
                                </button>\
                                <button class="btn btn-danger delete-button">\
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete\
                                </button>\
                            </td>\
                        </tr>\
                                        ');
                });
            }
        </script>
    </div>
</body>

